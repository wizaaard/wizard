{
  "extends": "../tsconfig.react.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "types": ["node", "jest"],
    "moduleResolution": "node",
    "rootDir": "src",
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "paths": {
      "~/*": ["./*"],
      "website/*": ["src/website/*"]
    }
  },
  "exclude": [
    "node_modules/**/*",
    "../node_modules/**/*",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "images.d.ts",
    "dist"
  ],
  "include": ["src/**/*"]
}
